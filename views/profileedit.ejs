<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <title>Edit Profile</title>
    <style>
        div{
            margin-bottom:15px;
        }
        input {
            outline: 0;
            border-width: 0 0 2px;
            border-color:#282726;
        }
        input:focus {
            border-color: #0294A5;
        }
    </style>

</head>


<body>

        <div class="container" style="border:2px solid black;margin-top:20px;margin-bottom:50px;width:700px">
        
        <div class="text-center"><h2>EDIT PROFILE</h2>
        </div>
            
            <div class="container">
            <form action='/user/profile/edit/<%= user._id %>' method='POST'>
                
                <div class="row">
                    <label for="firstname" class="col-md-2">First Name:</label>
                    <input name="firstname" class="col-md-4" value="<%= user.firstname %>" >
                </div>
            
                <div class="row">
                    <label for="lastname" class="col-md-2">Last Name:</label>
                    <input name="lastname" class="col-md-4" value="<%= user.lastname %>">
                </div>

                <div class="row">
                    <label for="email" class="col-md-2">Email:</label>
                    <input name="email" class="col-md-4" value="<%= user.email %>">
                </div>

                <div class="row">
                    <label for="phonenumber" class="col-md-2">Phone Number:</label>
                    <input name="phonenumber" class="col-md-4" value="<%= user.phonenumber%>">
                </div>
    
                <div class="row">
                    <label for="age" class="col-md-2">Age:</label>
                    <input name="age" class="col-md-4" value="<%= user.age %>">
                </div>

                <div class="row">
                    <label for="gender" class="col-md-2">Gender:</label>
                    <input name="gender" class="col-md-4" value="<%= user.gender %>">
                </div>

                <div class="row">

                    <label for="birthdate" class="col-md-2">Birthdate:</label>
                    <input name="birthdate" class="col-md-4" value="<%= user.birthdate %>">
                </div>

                <div class="row">
                    <label for="role" class="col-md-2">Role:</label>
                    <input name="role" class="col-md-4" value="<%= user.role %>">
                </div>

                <div class="text-center">
                    <button class="btn btn-primary">SAVE</button>
                </div>
    
            </form>
            
            </div>

            
        </div>

</body>
</html>