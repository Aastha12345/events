<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>  

    <title>Index</title>
    <style>
        html, body {
            
            min-height: 100%;
        }
    </style>
</head>
<body>
        
        <div class="container text-center" style="border:2px solid black">
            <div class="text-center">
                <h1>EVENTS</h1>
            </div>
        
            <a href='/story' ><button class="btn btn-info" style="margin-top:5px;margin-bottom:10px;">Add New Event</button></a>
        </div> 

            <div class="container text-center" style="margin-top:70px;margin-bottom:20px;">
                <% storys.forEach(story=> {%>

                    <div class="col-md-3" style= "border:2px solid black;height:330px;padding-top:5px;padding-bottom:5px;margin-left:60px;margin-bottom:20px;">
                        <h3><%= story.title %></h3>
                        <span maxlength="10"> <%= story.description.substring(0,250) %>...</span>
                        <br>
                        <a href='/story/show/<%=story._id %>'><button class="btn btn-primary" style="margin-top:20px;">MORE INFO</button></a>
                    </div>

                <% }) %>
            </div>



</body>
</html>