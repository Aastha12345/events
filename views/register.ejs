<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <style>
        div{
            margin-bottom:15px;
        }
        input {
            outline: 0;
            border-width: 0 0 2px;
            border-color:#282726;
        }
        input:focus {
            border-color: #0294A5;
        }
    </style>

    <script>

        errormsg=document.getElementById('errormsg');
        username=document.getElementsById('username');
        function validateForm() {
        var x = username.value;
        if (x == "") {
                alert('Username must be filled');
                return false;
            }
        }

        
    </script> 



    <title>Register</title>
</head>


<body>

    
    <div class=" container " style="border:2px solid black;margin-top:20px;margin-bottom:50px;width:700px">       


        <h3 style="background-color:wheat;" class="container text-center">
            <%= typeof msg !='undefined'?msg:'' %>
        </h3>

        <h2 id="errormsg">
        </h2>


        <div class="text-center"><h2>    REGISTER      </h2></div>

        <div>
            <form action="/register" method="POST" onsubmit="return validateForm()">
            
                <div class=container>

                    <div class=row>
                        <label for="firstname" class="col-md-2">First Name:</label>
                        <input type="text" name="firstname" class="col-md-4" placeholder="First Name">
                    </div>

                    <div class=row>
                        <label for="lastname" class="col-md-2">Last Name:</label>
                        <input type="text" name="lastname" class="col-md-4" placeholder="Last Name">
                    </div>

                    <div class="row">
                        <label for="username" class="col-md-2">Username:</label>
                        <input type="text" id="username" name="username" class="col-md-4" id="usernameid" placeholder="Username">
                    </div>

                    <div class=row>
                        <label for="password" class="col-md-2">Password:</label>
                        <input type="text" name="password" class="col-md-4" placeholder="Password">
                    </div>

                    <div class=row>
                        <label for="email" class="col-md-2">Email:</label>
                        <input type="text" name="email" class="col-md-4" placeholder="email">
                    </div>
                    
                    <div class=row>
                        <label for="phonenumber" class="col-md-2">Phone Number:</label>
                        <input type="number" name="phonenumber" class="col-md-4" placeholder="Phone Number">
                    </div>

                    <div class=row>
                        <label for="age" class="col-md-2">Age:</label>
                        <input type="number" name="age" class="col-md-4" placeholder="Age">
                    </div>

                    <div class=row>
                        <label for="gender" class="col-md-2">Gender:</label>
                        <input type="text" name="gender" class="col-md-4" placeholder="Gender">
                    </div>

                    <div class=row>
                        <label for="birthdate" class="col-md-2">Birth Date:</label>
                        <input type="date" name="birthdate" class="col-md-4" placeholder="Birth Date">
                    </div>

                    <div class=row>
                        <label for="role" class="col-md-2">Role:</label>
                        <input type="text" name="role" class="col-md-4" placeholder="Role">
                    </div>

                </div>
                
                <div class="text-center" >
                    <button class="btn btn-success">Submit</button>
                </div>

            </form>
        </div>

    </div>        

</body>
</html>