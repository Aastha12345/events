<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>  

    <title>Document</title>
    <style>
        html, body {
            
            min-height: 100%;
        }
    </style>

    
</head>
<body>

            <div class="container text-center">
                <% storys.forEach(story=> {%>
                <div class="container text-center col-md-3" style="border:2px solid black;height:330px;margin:40px;">
    
                    <h3><%= story.title %></h3>
                    <p><%= story.description.substring(0,300) %>...</p>
                    <a href='/story/show/<%=story._id %>'><button class="btn btn-primary">MORE INFO</button></a>
                </div>
                <% }) %>
    


            </div>



</body>
</html>
